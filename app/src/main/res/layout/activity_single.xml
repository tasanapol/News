<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262628"
    tools:context="com.example.art_cs19.news.PostActivity">

    <ImageButton
        android:id="@+id/imgShowUpload"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:background="#262628"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/add_btn" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgShowUpload"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvShowDate"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@color/cardview_dark_background"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="แสดงวันที่"
            android:textColor="@color/cardview_light_background"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvShowTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@color/cardview_dark_background"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="เวลา"
            android:textColor="@color/cardview_light_background"
            android:textSize="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvShowDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvShowTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="50dp"
        android:text="xxxxxx"
        android:textColor="@color/cardview_light_background"

        />

    <TextView
        android:id="@+id/tvShowTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:paddingLeft="30dp"
        android:text="xxx"
        android:textColor="@color/fbutton_color_carrot"
        android:textSize="30dp"
        android:textStyle="bold|italic" />


    <at.markushi.ui.CircleButton
        android:id="@+id/btnRead"
        android:layout_width="50dip"
        android:layout_height="64dip"
        android:src="@drawable/ic_volume30"
        app:cb_color="@color/fbutton_color_midnight_blue"
        app:cb_pressedRingWidth="8dip"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />


</RelativeLayout>
