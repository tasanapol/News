<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgPostImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/add_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPostDate"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/fbutton_color_midnight__dark_blue"
                android:gravity="right"
                android:paddingRight="20dp"
                android:text="แสดงวันที่"
                android:textColor="@color/cardview_light_background"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tvPostTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/fbutton_color_midnight__dark_blue"
                android:gravity="right"
                android:paddingRight="20dp"
                android:text="เวลา"
                android:textColor="@color/cardview_light_background"
                android:textSize="10dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:text="แสดงหัวข้อข่าวตรงนี้"
            android:textColor="@color/fbutton_color_carrot"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPostDescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:text="แสดงเนื้อหาตรงนี้" />


    </LinearLayout>


</android.support.v7.widget.CardView>
